# OpenAI API Key - получить на https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# Anthropic API Key - для Claude document processing
# Получить на https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# AWS Bedrock Bearer Token (альтернатива ANTHROPIC_API_KEY)
# Если установлен, будет использоваться AWS Bedrock вместо прямого API
# AWS_BEARER_TOKEN_BEDROCK=ABSKQmVkcm9ja0FQSUtleS0...
# AWS_REGION=us-east-1

# Base URL для генерации upload/download URLs
# Для локальной разработки используйте http://localhost:8080
# Для production используйте URL вашего Cloud Run сервиса
BASE_URL=http://localhost:8080

# Порт для локальной разработки (опционально)
PORT=8080

# Firebase credentials (опционально - для сохранения сообщений)
# Если не установлено, будет использовать дефолтные Google Cloud credentials в production
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/firebase-service-account.json

# Окружение (опционально)
ENVIRONMENT=development
